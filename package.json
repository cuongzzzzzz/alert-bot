{
  "name": "server-monitoring-bot",
  "version": "1.0.0",
  "description": "A Node.js bot that monitors server health and sends alerts via Lark/Feishu webhook",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node test.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "docker:build": "./scripts/docker-build.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "keywords": [
    "monitoring",
    "server",
    "health-check",
    "lark",
    "feishu",
    "webhook",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
